<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Kelola Soal - <%= paket %> | Tabeahan Cendekia</title>
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  <style>
    .confirm-delete { }
  </style>
</head>
<body class="bg-slate-100 font-sans text-slate-900 min-h-screen">

  <!-- NAVBAR -->
  <nav class="bg-[#0f172a] text-white shadow-lg sticky top-0 z-50">
    <div class="max-w-7xl mx-auto px-4 md:px-8 py-3 flex justify-between items-center">
      <div class="flex items-center gap-6">
        <div class="flex items-center gap-2.5">
          <img src="/logo.png" alt="Logo" class="h-8 w-auto opacity-90">
          <div>
            <span class="font-bold text-sm tracking-wide block leading-tight">TABEAHAN CENDEKIA</span>
            <span class="bg-yellow-500 text-[9px] px-1.5 py-0.5 rounded font-bold uppercase text-slate-900">Administrator</span>
          </div>
        </div>
        <div class="hidden md:flex gap-5 text-[11px] font-bold uppercase tracking-widest">
          <a href="/dashboardAdmin" class="text-slate-400 hover:text-white transition">Dashboard</a>
          <a href="/admin/daftarPeserta" class="text-slate-400 hover:text-white transition">Peserta Ujian</a>
        </div>
      </div>
      <a href="/logout" class="bg-red-600 hover:bg-red-700 px-5 py-1.5 rounded text-xs font-bold transition">Logout</a>
    </div>
  </nav>

  <div class="max-w-6xl mx-auto px-4 py-8">

    <!-- Header -->
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-6 gap-4">
      <div>
        <a href="/dashboardAdmin"
          class="inline-flex items-center gap-1.5 text-slate-400 hover:text-slate-700 text-xs font-bold uppercase tracking-widest transition mb-2">
          â† Dashboard
        </a>
        <h1 class="text-2xl font-black text-slate-800">Daftar Soal</h1>
        <p class="text-sm text-slate-500 mt-0.5">Paket: <span class="font-bold text-slate-700"><%= paket %></span></p>
      </div>
      <div class="bg-white px-4 py-2.5 rounded-lg border border-slate-200 shadow-sm">
        <span class="block text-[9px] font-bold text-slate-400 uppercase tracking-widest">Total Soal</span>
        <span class="text-xl font-black text-[#0f172a]"><%= soalList.length %></span>
      </div>
    </div>

    <!-- Table Card -->
    <div class="bg-white rounded-xl border border-slate-200 shadow-sm overflow-hidden">

      <div class="bg-slate-50 border-b border-slate-200 px-5 py-3 flex items-center justify-between">
        <h3 class="text-xs font-bold text-slate-600 uppercase tracking-widest">ğŸ“‹ Daftar Soal</h3>
        <span class="text-[10px] text-slate-400 font-semibold">Klik Edit untuk ubah â€¢ ğŸ—‘ï¸ untuk hapus</span>
      </div>

      <div class="overflow-x-auto">
        <table class="w-full text-left border-collapse">
          <thead>
            <tr class="bg-slate-50 border-b border-slate-200 text-[10px] font-black text-slate-400 uppercase tracking-widest">
              <th class="px-5 py-3 w-8">#</th>
              <th class="px-5 py-3">Materi</th>
              <th class="px-5 py-3">Pertanyaan</th>
              <th class="px-5 py-3 text-center w-16">Kunci</th>
              <th class="px-5 py-3 text-right w-32">Aksi</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-slate-100">
            <% soalList.forEach((s, i) => { %>
              <tr class="hover:bg-slate-50 transition group">

                <!-- Nomor -->
                <td class="px-5 py-3.5">
                  <span class="text-xs font-bold text-slate-300"><%= i + 1 %></span>
                </td>

                <!-- Materi -->
                <td class="px-5 py-3.5">
                  <span class="px-2 py-1 bg-slate-100 text-slate-600 text-[10px] rounded font-bold uppercase">
                    <%= s.materi %>
                  </span>
                </td>

                <!-- Soal -->
                <td class="px-5 py-3.5">
                  <p class="text-sm text-slate-700 font-medium leading-relaxed">
                    <%= s.soal.length > 110 ? s.soal.substring(0, 110) + '...' : s.soal %>
                  </p>
                </td>

                <!-- Kunci -->
                <td class="px-5 py-3.5 text-center">
                  <span class="inline-flex items-center justify-center w-7 h-7 rounded-full bg-green-100 text-green-700 font-black text-xs border border-green-200 uppercase">
                    <%= s.kunci %>
                  </span>
                </td>

                <!-- Aksi -->
                <td class="px-5 py-3.5">
                  <div class="flex justify-end items-center gap-2">
                    <a href="/admin/editSoal/<%= s.id %>"
                      class="bg-[#0f172a] hover:bg-slate-700 text-white text-[10px] font-bold px-3 py-1.5 rounded transition">
                      Edit
                    </a>
                    <form action="/admin/delete-soal" method="POST" class="confirm-delete">
                      <input type="hidden" name="id" value="<%= s.id %>">
                      <input type="hidden" name="paket" value="<%= s.paket %>">
                      <button type="submit"
                        class="p-1.5 text-slate-300 hover:text-red-600 hover:bg-red-50 rounded transition cursor-pointer">
                        ğŸ—‘ï¸
                      </button>
                    </form>
                  </div>
                </td>

              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <% if (soalList.length === 0) { %>
        <div class="p-16 text-center">
          <div class="text-4xl opacity-20 mb-3">ğŸ“­</div>
          <p class="text-slate-400 text-sm font-semibold">Belum ada soal di paket ini.</p>
          <a href="/dashboardAdmin" class="inline-block mt-4 text-xs font-bold text-blue-600 hover:underline">
            â† Tambah soal dari Dashboard
          </a>
        </div>
      <% } %>

    </div>

    <p class="mt-6 text-center text-slate-400 text-[10px] font-bold uppercase tracking-widest">
      Tabeahan Cendekia Admin Panel
    </p>
  </div>

  <script>
    document.querySelectorAll('.confirm-delete').forEach(form => {
      form.addEventListener('submit', function(e) {
        if (!confirm('Hapus soal ini secara permanen?')) e.preventDefault();
      });
    });
  </script>

</body>
</html>
