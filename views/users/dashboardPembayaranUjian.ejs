              <% } %>
            </div>
            <% if (typeof riwayatUjian !== 'undefined' && riwayatUjian.length > 0) { %>
              <div class="space-y-0 text-xs max-h-52 overflow-y-auto pr-1">
                <% riwayatUjian.forEach((r, i) => { %>
                <div class="riwayat-row">
                  <div>
                    <p class="font-semibold truncate max-w-[120px]" style="color:var(--dark)"><%= r.paket.replace('Paket ','') %></p>
