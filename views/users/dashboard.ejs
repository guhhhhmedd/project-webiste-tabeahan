<!DOCTYPE html>
<html lang="id">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard Peserta - Tabeahan Cendekia</title>
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  <link href="https://fonts.googleapis.com/css2?family=Bungee&family=Pixelify+Sans:wght@400;700&display=swap" rel="stylesheet">

  <style>
    body { font-family: "Pixelify Sans", sans-serif; background: #fdfaf5; }
    .font-bungee { font-family: "Bungee", sans-serif; }
    .bg-tabeahan-gold { background-color: #b8924a; }
    .bg-tabeahan-dark { background-color: #4a3721; }
    .border-tabeahan { border-color: #b8924a; }
    .card-hover { transition: all 0.3s ease; }
    .card-hover:hover { transform: translateY(-5px); }
    .dropdown:hover .dropdown-menu { display: block; }

    /* Upload area styling */
    .upload-zone { transition: all 0.2s ease; }
    .upload-zone:hover { border-color: #b8924a; background: #fffbf5; }
    .upload-zone.dragover { border-color: #b8924a; background: #fff8ed; transform: scale(1.01); }

    /* Error shake animation */
    @keyframes shake {
      0%, 100% { transform: translateX(0); }
      20% { transform: translateX(-8px); }
      40% { transform: translateX(8px); }
      60% { transform: translateX(-5px); }
      80% { transform: translateX(5px); }
    }
    .shake { animation: shake 0.4s ease; }

    /* Toast notification */
    @keyframes slideIn {
      from { transform: translateX(100%); opacity: 0; }
      to { transform: translateX(0); opacity: 1; }
    }
    @keyframes slideOut {
      from { transform: translateX(0); opacity: 1; }
      to { transform: translateX(100%); opacity: 0; }
    }
    .toast { animation: slideIn 0.3s ease forwards; }
    .toast.hide { animation: slideOut 0.3s ease forwards; }
  </style>
</head>

<body class="bg-[#fdfaf5] min-h-screen">

  <!-- Toast Error Notification -->
  <% if (uploadError) { %>
  <div id="toast" class="toast fixed top-4 right-4 z-[999] max-w-sm">
    <div class="bg-white border-l-4 border-red-500 rounded-xl shadow-2xl p-4 flex items-start gap-3">
      <div class="text-2xl">‚ùå</div>
      <div class="flex-1">
        <p class="font-bungee text-red-600 text-xs uppercase tracking-wide">Upload Gagal!</p>
        <p class="text-xs text-slate-600 mt-1"><%= uploadError %></p>
      </div>
      <button onclick="dismissToast()" class="text-slate-300 hover:text-slate-500 text-lg leading-none">√ó</button>
    </div>
    <!-- Progress bar -->
    <div class="h-1 bg-red-100 rounded-b-xl overflow-hidden">
      <div id="toast-bar" class="h-full bg-red-400 w-full transition-all duration-[4000ms] ease-linear"></div>
    </div>
  </div>
  <% } %>

  <header class="bg-tabeahan-dark text-white p-4 shadow-xl border-b-4 border-tabeahan flex justify-between items-center sticky top-0 z-50">
    <a href="#" class="flex items-center gap-3 hover:opacity-90 transition">
      <img src="/logo.png" alt="Logo" class="h-10 w-10 object-contain bg-white rounded-full p-1">
      <h2 class="font-bungee text-base md:text-lg tracking-wider text-yellow-400">Tabeahan Cendekia</h2>
    </a>

    <div class="relative dropdown group">
      <button class="flex items-center gap-3 bg-white/10 px-4 py-2 rounded-2xl border border-white/20 hover:bg-white/20 transition cursor-pointer">
        <div class="text-right hidden md:block">
          <p class="font-bold text-xs uppercase leading-none"><%= user.username %></p>
          <span class="text-[8px] text-orange-200">#<%= user.id %></span>
        </div>
        <div class="w-8 h-8 bg-yellow-400 rounded-full flex items-center justify-center text-tabeahan-dark font-bold">
          <%= user.username.charAt(0).toUpperCase() %>
        </div>
      </button>

      <div class="dropdown-menu hidden absolute right-0 mt-2 w-56 bg-white rounded-2xl shadow-2xl border border-slate-200 overflow-hidden">
        <div class="p-4 border-b bg-slate-50">
          <p class="text-[10px] text-slate-400 font-bold uppercase">Email Terdaftar</p>
          <p class="text-xs text-slate-700 truncate"><%= user.email %></p>
        </div>
        <div class="p-2">
          <a href="/logout" class="block w-full text-left px-4 py-3 text-xs font-bold text-slate-600 hover:bg-slate-100 rounded-xl transition uppercase tracking-widest">
            Keluar Sistem
          </a>
          <hr class="my-2 border-slate-100">
          <form action="/deleteAccount" method="POST" onsubmit="return confirm('Akun akan dihapus permanen! Anda yakin?')">
            <input type="hidden" name="id" value="<%= user.id %>">
            <button type="submit" class="w-full text-left px-4 py-3 text-[10px] font-bold text-red-400 hover:bg-red-50 hover:text-red-600 rounded-xl transition uppercase">
              Hapus Akun
            </button>
          </form>
        </div>
      </div>
    </div>
  </header>

  <main class="p-4 md:p-8 max-w-6xl mx-auto">
    <div class="mb-8">
      <h1 class="text-2xl font-bungee text-tabeahan-dark">Selamat Datang, <%= user.username %>!</h1>
      <p class="text-slate-500 text-sm">Status Ujian:
        <span class="font-bold <%= user.status === 'LUNAS' ? 'text-green-600' : 'text-orange-500' %>">
          <%= user.status %>
        </span>
      </p>
    </div>

    <div class="lg:col-span-2 space-y-6">
      <div class="bg-white p-8 rounded-3xl shadow-sm border-t-8 border-tabeahan min-h-[400px] flex flex-col justify-center relative overflow-hidden">
        <div class="absolute -right-10 -bottom-10 text-[90px] opacity-5 select-none">üìù</div>

        <h3 class="font-bungee text-tabeahan-gold text-xl mb-6 text-center uppercase tracking-wider">Gerbang Utama Ujian</h3>

        <% if (user.status === 'LUNAS') { %>
          <% if (user.status_ujian === 'SELESAI') { %>
            <div class="text-center space-y-4">
              <div class="inline-block p-4 bg-yellow-50 rounded-full mb-2"><span class="text-4xl">üéì</span></div>
              <h4 class="text-slate-400 text-xs font-bold uppercase tracking-widest">Skor Akhir Anda</h4>
              <div class="text-8xl font-bungee text-tabeahan-dark drop-shadow-md"><%= user.skor || 0 %></div>
              <div class="inline-flex items-center gap-2 bg-tabeahan-dark text-yellow-400 px-6 py-2 rounded-full font-bungee text-sm shadow-lg">
                RANKING #<%= typeof myRank !== 'undefined' ? myRank : '?' %>
              </div>
              <p class="text-xs text-slate-400 mt-6 max-w-xs mx-auto italic underline">"Hasil ini sudah final dan tersimpan dalam database."</p>
            </div>

          <% } else { %>
            <div class="text-center max-w-md mx-auto">
              <div class="p-6 bg-slate-50 rounded-2xl border-2 border-dashed border-slate-200 mb-6">
                <p class="text-xs text-slate-500 mb-3 font-bold uppercase">Token Akses Ujian Anda:</p>
                <div class="bg-tabeahan-dark text-white p-5 rounded-xl shadow-inner mb-4">
                  <span class="text-4xl font-bungee tracking-[0.2em] text-yellow-400"><%= user.token_ujian %></span>
                </div>
                <p class="text-[10px] text-red-500 italic mb-2">*Masukkan kembali token di atas untuk memvalidasi akses</p>
              </div>
              <form action="/ujian/mulai" method="POST" class="space-y-4">
                <input type="text" name="token_input" placeholder="KETIK TOKEN DI SINI"
                  class="w-full px-4 py-3 border-2 border-tabeahan rounded-xl text-center font-bungee tracking-widest focus:ring-4 focus:ring-yellow-200 outline-none uppercase" required>
                <button type="submit"
                  class="w-full bg-tabeahan-gold text-white py-4 rounded-2xl font-bungee text-lg hover:bg-yellow-700 transition-all shadow-[0_5px_0_0_#8b6d37] active:shadow-none active:translate-y-1"
                  onclick="return confirm('Waktu akan mulai berjalan. Anda siap?')">
                  VERIFIKASI & MULAI UJIAN
                </button>
              </form>
              <p class="text-[10px] text-slate-400 mt-4 italic">Pastikan koneksi internet stabil sebelum memulai.</p>
            </div>
          <% } %>

        <% } else if (user.status === 'PENDING') { %>
          <div class="text-center py-10">
            <div class="text-6xl mb-4 animate-bounce">‚è≥</div>
            <h4 class="font-bungee text-orange-500 text-lg">Validasi Pembayaran</h4>
            <p class="text-sm text-slate-600 mt-2 max-w-sm mx-auto">Bukti transfer Anda sudah kami terima. Admin sedang mengecek manual. Mohon tunggu beberapa saat.</p>
          </div>

        <% } else { %>
          <div class="space-y-6">

            <% if (user.status === 'DITOLAK') { %>
            <div class="p-4 bg-red-50 border-l-4 border-red-500 rounded-lg flex items-start gap-3">
              <span class="text-xl">‚ùå</span>
              <div>
                <p class="text-red-700 font-bold text-xs uppercase font-bungee">Pembayaran Ditolak</p>
                <p class="text-[10px] text-red-600">Bukti tidak valid atau tidak terbaca. Mohon upload ulang.</p>
              </div>
            </div>
            <% } %>

            <div class="bg-yellow-50 p-4 rounded-xl border border-yellow-100 flex items-center justify-between">
              <div class="text-xs text-slate-700">
                <p class="font-bold">Biaya Pendaftaran:</p>
                <p class="text-lg font-bungee text-tabeahan-dark">Rp 50.000</p>
              </div>
              <div class="text-right text-[10px] text-slate-500 leading-tight">
                <p>BCA: 1234-567-890</p>
                <p>a.n Tabeahan Cendekia</p>
              </div>
            </div>

            <!-- Upload Form -->
            <form action="/users/upload-bukti" method="POST" enctype="multipart/form-data" class="space-y-4" id="uploadForm">

              <!-- Drop Zone -->
              <div id="dropZone"
                class="upload-zone border-2 border-dashed border-slate-300 rounded-2xl p-6 text-center cursor-pointer relative min-h-[120px] flex items-center justify-center"
                ondragover="handleDragOver(event)"
                ondragleave="handleDragLeave(event)"
                ondrop="handleDrop(event)">

                <!-- Input transparan menutupi seluruh area -->
                <input type="file" name="bukti" id="buktiInput" accept="image/jpeg,image/png,image/jpg"
                  class="absolute inset-0 w-full h-full opacity-0 cursor-pointer z-10"
                  onchange="handleFileSelect(this)" required>

                <div id="dropContent" class="pointer-events-none">
                  <div class="text-4xl mb-2">üìÅ</div>
                  <p class="font-bungee text-slate-500 text-xs uppercase tracking-wide">Klik atau drag file ke sini</p>
                  <p class="text-[10px] text-slate-400 mt-1">JPG / PNG ‚Ä¢ Maksimal 2MB</p>
                </div>

                <!-- Preview setelah file dipilih -->
                <div id="filePreview" class="hidden pointer-events-none">
                  <img id="previewImg" src="" alt="Preview" class="max-h-40 mx-auto rounded-xl shadow-md mb-2 object-contain">
                  <p id="fileName" class="text-xs font-bold text-tabeahan-dark"></p>
                  <p id="fileSize" class="text-[10px] text-slate-400"></p>
                  <p class="text-[10px] text-slate-400 mt-1 italic">Klik untuk ganti file</p>
                </div>
              </div>

              <!-- Inline error untuk validasi client-side -->
              <div id="fileError" class="hidden p-3 bg-red-50 border border-red-200 rounded-xl flex items-center gap-2">
                <span class="text-lg">‚ö†Ô∏è</span>
                <p id="fileErrorText" class="text-xs text-red-600 font-bold"></p>
              </div>

              <!-- Info format yang diterima -->
              <div class="flex gap-2 text-[10px] text-slate-400">
                <span class="bg-slate-100 px-2 py-1 rounded-lg">‚úÖ JPG</span>
                <span class="bg-slate-100 px-2 py-1 rounded-lg">‚úÖ PNG</span>
                <span class="bg-red-50 text-red-400 px-2 py-1 rounded-lg">‚ùå PDF</span>
                <span class="bg-red-50 text-red-400 px-2 py-1 rounded-lg">‚ùå DOCX</span>
                <span class="bg-red-50 text-red-400 px-2 py-1 rounded-lg">‚ùå > 2MB</span>
              </div>

              <button type="submit" id="submitBtn"
                class="w-full bg-tabeahan-dark text-yellow-400 py-3 rounded-xl font-bungee text-sm hover:bg-black transition-all shadow-lg disabled:opacity-40 disabled:cursor-not-allowed">
                KIRIM KONFIRMASI PEMBAYARAN
              </button>
            </form>
          </div>
        <% } %>
      </div>
    </div><br>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 space-y-6">
      <div class="lg:col-span-1 space-y-6">
        <div class="bg-tabeahan-dark text-white p-6 rounded-2xl shadow-xl border-b-4 border-tabeahan card-hover">
          <h3 class="font-bungee text-yellow-400 text-md mb-4 flex items-center gap-2">üèÜ 10 Besar Skor</h3>
          <div class="space-y-3">
            <% if (rankings && rankings.length > 0) { %>
              <% rankings.forEach((r, index) => { %>
                <div class="flex justify-between items-center text-xs p-2 rounded-lg <%= r.username === user.username ? 'bg-yellow-400/20 border border-yellow-400/50' : 'bg-white/5' %>">
                  <span class="<%= r.username === user.username ? 'text-yellow-400 font-bold' : 'text-slate-300' %>">
                    <%= index + 1 %>. <%= r.username %>
                  </span>
                  <span class="font-mono font-bold text-yellow-400"><%= r.skor %></span>
                </div>
              <% }) %>
            <% } else { %>
              <p class="text-[10px] text-slate-400 italic text-center py-4">Belum ada data peringkat.</p>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </main>

  <script>
    // === TOAST AUTO DISMISS ===
    const toast = document.getElementById('toast');
    if (toast) {
      // Mulai progress bar
      setTimeout(() => {
        const bar = document.getElementById('toast-bar');
        if (bar) bar.style.width = '0%';
      }, 100);

      // Auto dismiss setelah 4 detik
      setTimeout(() => dismissToast(), 4000);
    }

    function dismissToast() {
      if (toast) {
        toast.classList.add('hide');
        setTimeout(() => toast.remove(), 300);
      }
    }

    // === FILE UPLOAD VALIDATION ===
    const MAX_SIZE = 2 * 1024 * 1024; // 2MB
    const ALLOWED_TYPES = ['image/jpeg', 'image/png', 'image/jpg'];

    function handleFileSelect(input) {
      const file = input.files[0];
      if (!file) return;
      validateAndPreview(file);
    }

    function handleDragOver(e) {
      e.preventDefault();
      document.getElementById('dropZone').classList.add('dragover');
    }

    function handleDragLeave(e) {
      document.getElementById('dropZone').classList.remove('dragover');
    }

    function handleDrop(e) {
      e.preventDefault();
      document.getElementById('dropZone').classList.remove('dragover');
      const file = e.dataTransfer.files[0];
      if (!file) return;

      // Assign ke input
      const input = document.getElementById('buktiInput');
      const dt = new DataTransfer();
      dt.items.add(file);
      input.files = dt.files;

      validateAndPreview(file);
    }

    function validateAndPreview(file) {
      const errorDiv = document.getElementById('fileError');
      const errorText = document.getElementById('fileErrorText');
      const dropZone = document.getElementById('dropZone');

      // Reset error
      errorDiv.classList.add('hidden');

      // Validasi tipe file
      if (!ALLOWED_TYPES.includes(file.type)) {
        showFileError(`Format "${file.name.split('.').pop().toUpperCase()}" tidak didukung! Gunakan JPG atau PNG.`);
        dropZone.classList.add('shake');
        setTimeout(() => dropZone.classList.remove('shake'), 400);
        return;
      }

      // Validasi ukuran
      if (file.size > MAX_SIZE) {
        const sizeMB = (file.size / 1024 / 1024).toFixed(1);
        showFileError(`File terlalu besar! Ukuran file: ${sizeMB}MB, maksimal 2MB.`);
        dropZone.classList.add('shake');
        setTimeout(() => dropZone.classList.remove('shake'), 400);
        return;
      }

      // Tampilkan preview
      const reader = new FileReader();
      reader.onload = (e) => {
        document.getElementById('previewImg').src = e.target.result;
        document.getElementById('fileName').textContent = file.name;
        document.getElementById('fileSize').textContent = (file.size / 1024).toFixed(0) + ' KB';
        document.getElementById('dropContent').classList.add('hidden');
        document.getElementById('filePreview').classList.remove('hidden');
      };
      reader.readAsDataURL(file);
    }

    function showFileError(msg) {
      const errorDiv = document.getElementById('fileError');
      document.getElementById('fileErrorText').textContent = msg;
      errorDiv.classList.remove('hidden');
      // Reset file input
      document.getElementById('buktiInput').value = '';
      document.getElementById('dropContent').classList.remove('hidden');
      document.getElementById('filePreview').classList.add('hidden');
    }
  </script>
</body>
</html>
